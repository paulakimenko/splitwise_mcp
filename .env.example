# Splitwise MCP Service Environment Variables
# Copy this file to .env and fill in your actual values

# Splitwise API Configuration
SPLITWISE_API_KEY=your_splitwise_personal_api_key_here
SPLITWISE_CONSUMER_KEY=your_splitwise_consumer_key_here
SPLITWISE_CONSUMER_SECRET=your_splitwise_consumer_secret_here

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
DB_NAME=splitwise

# Cache Configuration (optional)
# Enable/disable MongoDB-backed caching layer (defaults to true)
CACHE_ENABLED=true

# Cache TTL (Time To Live) in minutes for different entity types
# These control how long cached data is considered valid before re-fetching from API
CACHE_TTL_EXPENSES=5        # Expenses cache (frequently changing data)
CACHE_TTL_FRIENDS=5         # Friends cache (frequently changing data)
CACHE_TTL_USERS=60          # Users cache (moderately stable data)
CACHE_TTL_GROUPS=60         # Groups cache (moderately stable data)
CACHE_TTL_CATEGORIES=1440   # Categories cache (24 hours - static data)
CACHE_TTL_CURRENCIES=1440   # Currencies cache (24 hours - static data)
CACHE_TTL_NOTIFICATIONS=0   # Notifications (0 = never cache, always fresh)

# MCP Transport Configuration (optional)
# Transport mode: stdio (default for local) or streamable-http (for remote/Docker)
MCP_TRANSPORT=stdio
# Host to bind to for HTTP transport (use 0.0.0.0 for Docker)
MCP_HOST=0.0.0.0
# Port for HTTP transport
MCP_PORT=8000

# Development/Testing Configuration (optional)
# Set to development, testing, or production
ENVIRONMENT=development

# Logging Level (optional)
# LOG_LEVEL=INFO

# Docker Registry Configuration (optional)
# Docker Hub username or registry URL
DOCKER_REGISTRY=your_dockerhub_username
DOCKER_IMAGE_NAME=splitwise-mcp
DOCKER_TAG=latest